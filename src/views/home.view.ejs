<% layout('../layouts/boilplates.ejs') %>
<div class="container">
    <!-- Banner -->
    <header class="banner">
        <div class="banner-left">
            <div class="carousel">
                <% for(let product of products){ %>
                <div class="carousel-item active">
                    <% for(let img of product.images){ %>
                    <img src="<%=img.url %>" alt="">
                    <% break; } %>
                </div>
                <% } %>
                
            </div>
            <button class="carousel-control prev" onclick="prevSlide()">&#10094;</button>
            <button class="carousel-control next" onclick="nextSlide()">&#10095;</button>
        </div>
        <div class="banner-right">
            <% for(let product of products){ %>
            <div class="banner-right__item">
                <% for(let img of product.images) { %>
                <img src="<%=img.url %>" alt="">
                <% break; } %>
                <div class="details">
                    <span class="title"><%=product.title %></span>
                    <span class="info"><%=product.description %></span>
                </div>
            </div>
            <% } %>
            
        </div>
    </header>
    <div class="content">
        <h1 class="content-title">Danh mục</h1>

        
        <div class="category">
            <div class="category-list">
                <% for(let category of categories){ %>
                    <div class="category-item">
                        <div class="category-item__img">
                            <img src="<%=category.image.url %>" alt="Ảnh danh mục">
                        </div>
                        <span class="category-item__name"><%=category.name %></span>
                        <span class="category-item__description"><%=category.description %></span>
                    </div>
                <% } %>
            </div>
            <span class="category-control prev" onclick="prevCategory()">&lt;</span>
            <span class="category-control next" onclick="nextCategory()">&gt;</span>
        </div>
        
        

    </div>


</div>

<script src="/js/home.view.js"></script>


